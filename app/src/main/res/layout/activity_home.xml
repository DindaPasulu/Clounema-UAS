                                android:textSize="14sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/movie_year1"
                                android:fontFamily="@font/poppins"
                                android:textSize="14sp"/>
