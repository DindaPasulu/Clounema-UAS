<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PilihJadwal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">
        <ImageView
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_icon_google">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_title1"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:fontFamily="@font/poppins_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_year1"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cloud Cinema"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 Mei 2021"
            android:textSize="12dp"
            android:fontFamily="@font/poppins"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <Button
            android:id="@+id/btn_jadwal1"
            android:layout_width="79dp"
            android:layout_height="29dp"
            android:layout_marginRight="10dp"
            android:background="@color/main_color"
            android:text="13:30"
            android:textColor="@color/colorWhite" />
        <Button
            android:id="@+id/btn_jadwal2"
            android:layout_width="79dp"
            android:layout_height="29dp"
            android:text="14:30"
            android:textColor="@color/colorWhite"
            android:background="@color/main_color"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

</LinearLayout>